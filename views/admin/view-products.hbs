<section>
  <div class="main-content">

    <div class="page-content">
      <div class="container">
        <div class="row">
          <a href="/admin/add-product" class="btn btn-success col-md-2 mb-5">Add
            Product</a>
          <div class="col-12">
            <table class="table" id="example">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  {{!-- <th scope="col">Offer Price</th> --}}
                  <th scope="col">Price</th>
                  <th scope="col">Description</th>
                  <th scope="col">Images</th>
                  <th scope="col"></th>
                  
                  <th scope="col">Option</th>
                  
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                  <tr>
                    <td scope="row">{{inc @index}}</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.category}}</td>
                    {{!-- <td>{{this.OfferPrice}}</td> --}}
                    <td>{{this.Price}}</td>
                    <td>{{this.Description}}</td>
                    <td><img
                        style="width:50px; height:50px"
                        src="/product-images/{{this._id}}.jpg"
                      /></td>
                      
                       <td><img
                        style="width:50px; height:50px"
                        src="/product-img1/{{this._id}}.jpg"
                      /></td>
{{!--                       
                       <td><img
                        style="width:50px; height:50px"
                        src="/product-img2/{{this._id}}.jpg"
                      /></td>
                      
                       <td><img
                        style="width:50px; height:50px"
                        src="/product-img3/{{this._id}}.jpg"
                      /></td> --}}
                      

                    <td>
                      <a
                        href="/admin/edit-product?id={{this._id}}" style="width:70px; height:40px"
                        class="btn btn-primary mb-1"
                      >Edit</a>
                      <a
                        href="/admin/delete-product/{{this._id}}"
                        class="btn btn-danger"
                        onclick="return confirm('Are you sure want to delete {{this.Name}}?')"
                      >Delete</a>

                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

 <div class="main-content">
                <div class="page-content">
                    <div class="container">
                        <div class="row">
            <div class="container-fluid">
                <div class="page-head d-flex justify-content-between">
                    <h4 class="mt-2 mb-2 text-white"> Sales Report </h4>


                </div>
                <div class="edit-table">
                    <div class="row">

                        <div class="col-lg-12 col-sm-12">
                            <div class="card m-b-30">
                                <div class="card-body">
                                    {{!-- <p class="text-muted">Add toolbar column with edit and delete buttons.</p>
                                    --}}
                                    <div class="">

                                        {{!-- daily Sales --}}
                                        {{#if dailysale}}
                                        <table id="example" class="display" id="day" style="width:100%">
                                            <h3 style="text-align:center">Daily Sales Report</h3>
                                            <thead>
                                                <tr>

                                                    <th style="text-align:center">S-No:</th>
                                                    <th style="text-align:center">Date</th>
                                                    <th style="text-align:center">Name of Product</th>
                                                    <th style="text-align:center">Price Of Product</th>
                                                    <th style="text-align:center">Quantity</th>
                                                    <th style="text-align:center">Daily Sales</th>


                                                </tr>
                                            </thead>
                                            <tbody>

                                                {{#each dailysalePro}}

                                                <tr>

                                                    <td style="text-align:center ;">{{inc @index}}</td>
                                                    <td style="text-align:center ;">{{this.date}}</td>
                                                    <td style="text-align:center ;"> {{this.Name}}</td>
                                                    <td style="text-align:center ;">{{this.Price}}</td>
                                                    <td style="text-align:center ;">{{this.quantity}}</td>
                                                    <td style="text-align:center ;">{{this.totalAmount}}</td>
                                                    {{/each}}

                                                </tr>
                                                <tr>
                                                    <td>
                                                    
                                                        <p style="color:#00ff73"><i>Total Orders:</i>
                                                               {{!-- {{#each dailysale}} <strong>{{this.torders}}</strong></p> --}}
                                                        {{!-- {{/each}} --}}
                                                    </td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td style="text-align:center ; color: rgb(234, 0, 0);">
                                                        <i>Total-Quantity:</i><strong>{{sum}}</td>
                                                    <td style="text-align:center ; color: rgb(234, 0, 0);"><i>Total
                                                            Sales:</i><strong>{{sum2}}</strong> </td>

                                                </tr>

                                            </tbody>
                                        </table>


                                        {{!-- Monthly --}}

                                        {{else if monthly}}

                                        <table id="example" class="display" id="month" style="width:100%">
                                            <h3 style="text-align:center">Monthly Sales Report</h3>
                                            <thead>
                                                <tr>

                                                    <th style="text-align:center">S-No:</th>
                                                    <th style="text-align:center">Date</th>
                                                    <th style="text-align:center">No: of Orders</th>
                                                    <th style="text-align:center">Monthly Sales</th>


                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each monthly}}

                                                <tr>
                                                    <td style="text-align:center ;">{{ @index}}</td>
                                                    <td style="text-align:center ;">{{this._id}}</td>
                                                    <td style="text-align:center ;">{{this.count}}</td>
                                                    <td style="text-align:center ;">{{this.totalAmount}}</td>

                                                </tr>
                                                {{/each}}

                                                <tr>

                                                    <td>Total</td>
                                                    <td></td>
                                                    <td style="text-align:center ; color: rgb(234, 0, 0);">
                                                        <i>Total-Orders:</i><strong>{{sum}}</td>
                                                    <td style="text-align:center ; color: rgb(234, 0, 0);"><i>Total
                                                            Sales:</i><strong>{{sum2}}</strong> </td>
                                                </tr>

                                        </table>


                                        {{!-- yearly --}}

                                        {{else if yearlyy}}

                                        <table id="example" class="display" id="year" style="width:100%">
                                            <h3 style="text-align:center">Yearly Sales Report</h3>
                                            <thead>
                                                <tr>

                                                    <th style="text-align:center">S-No:</th>
                                                    <th style="text-align:center">Year</th>
                                                    <th style="text-align:center">No: of Orders</th>
                                                    <th style="text-align:center">Yearly Sales</th>


                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each yearlyy}}

                                                <tr>
                                                    <td style="text-align:center ;">{{ @index}}</td>
                                                    <td style="text-align:center ;">{{this._id}}</td>
                                                    <td style="text-align:center ;">{{this.count}}</td>
                                                    <td style="text-align:center ;">{{this.totalAmount}}</td>

                                                </tr>
                                                {{/each}}
                                                <tr>

                                                    <td>Total</td>
                                                    <td></td>
                                                    <td style="text-align:center ; color: rgb(234, 0, 0);">
                                                        <i>Total-Orders:</i><strong>{{sum}}</td>
                                                    <td style="text-align:center ; color: rgb(234, 0, 0);"><i>Total
                                                            Sales:</i><strong>{{sum2}}</strong> </td>
                                                </tr>


                                        </table>
                                        {{/if}}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end row-->
                </div>
                   </div>
                                </div>
                            </div>
                        </div>
                <!--end body content-->
    </section>

